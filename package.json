{
  "name": "vulkan-flow",
  "type": "module",
  "version": "0.1.0",
  "description": "A Vue.js flow editor built with Vue Flow for creating node-based workflows",
  "author": "KoMatrich",
  "keywords": [
    "vue",
    "flow",
    "node-editor",
    "workflow",
    "typescript",
    "vulkan"
  ],
  "scripts": {
    "dev": "vite --host 0.0.0.0",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "type-check": "vue-tsc --noEmit",
    "prepare": "husky",
    "format": "eslint . --fix",
    "format:check": "eslint . --max-warnings 0"
  },
  "dependencies": {
    "@vue-flow/background": "^1.3.0",
    "@vue-flow/controls": "^1.1.0",
    "@vue-flow/core": "^1.41.6",
    "@vue-flow/minimap": "^1.5.0",
    "@vue-flow/node-toolbar": "^1.1.1",
    "vue": "^3.5.12"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.12.2",
    "@types/node": "^22.0.0",
    "@vitejs/plugin-vue": "^5.2.1",
    "eslint": "^9.17.0",
    "eslint-plugin-format": "^1.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "typescript": "^5.3.3",
    "vite": "6.3.4",
    "vue-tsc": "^2.2.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": [
      "eslint --fix"
    ],
    "*.{json,yml,yaml}": [
      "eslint --fix"
    ]
  }
}
